# AWS EKS Deployment Configuration Example
# Copy this file to infrastructure/aws/terraform/terraform.tfvars and customize

# AWS Configuration
aws_profile = "your-aws-profile-name"
region      = "us-west-2"

# EKS Cluster Configuration
cluster_name    = "n8n-eks-cluster"
cluster_version = "1.31"

# Node Group Configuration
node_instance_types = ["t3.medium"]
node_desired_size   = 2
node_min_size       = 1
node_max_size       = 5

# N8N Application Configuration
n8n_host             = "n8n.yourdomain.com"
n8n_namespace        = "n8n"
n8n_persistence_size = "10Gi"
timezone             = "America/Bahia"

# Database Configuration
database_type        = "sqlite"  # Options: sqlite, postgresql
# Uncomment for PostgreSQL:
# rds_instance_class   = "db.t3.small"
# rds_allocated_storage = 20
# rds_multi_az         = false

# Optional: Provide your own encryption key (64-character hex)
# n8n_encryption_key = ""

# Optional: Enable basic authentication
# enable_basic_auth = false

# Optional: Enable NGINX ingress controller
enable_nginx_ingress = true
